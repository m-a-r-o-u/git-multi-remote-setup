#!/usr/bin/env bash
set -euo pipefail

if [ "$#" -lt 1 ]; then
  echo "Usage: $0 <remote-url> [<remote-url> â€¦]"
  exit 1
fi

# 0) If this is a clone with exactly one remote (origin) that already
#    matches your sole URL, rename it to github/gitlab so we don't add dupes.
if [ "$#" -eq 1 ] && git rev-parse --is-inside-work-tree &>/dev/null; then
  if git remote get-url origin &>/dev/null; then
    origin_url=$(git remote get-url origin)
    if [ "$origin_url" = "$1" ]; then
      if [[ "$1" =~ github\.com ]]; then
        echo "ðŸ”€ Renaming existing 'origin'â†’'github'"
        git remote rename origin github
      elif [[ "$1" =~ ([Gg]itlab) ]]; then
        echo "ðŸ”€ Renaming existing 'origin'â†’'gitlab'"
        git remote rename origin gitlab
      fi
    fi
  fi
fi

# 1) Init & bootstrap
if ! git rev-parse --is-inside-work-tree &>/dev/null; then
  echo "ðŸš€ Initializing empty Git repository"
  git init
fi
if ! git rev-parse --verify HEAD &>/dev/null; then
  echo "ðŸ“ Creating initial empty commit"
  git commit --allow-empty -m "chore: initial commit"
fi

# 2) Add named remotes (github/gitlab/remoteN)
for url in "$@"; do
  if [[ "$url" =~ github\.com ]]; then
    name=github
  elif [[ "$url" =~ ([Gg]itlab) ]]; then
    name=gitlab
  else
    name=remote$(echo -n "$url" | cksum | cut -f1 -d' ')
  fi

  if git remote get-url "$name" &>/dev/null; then
    echo "ðŸ”— Remote '$name' exists, skipping"
  else
    echo "ðŸ”— Adding remote '$name' â†’ $url"
    git remote add "$name" "$url"
  fi
done

# 3) Setup origin for push-only
if ! git remote get-url origin &>/dev/null; then
  git remote add origin "$1"
fi
for url in "$@"; do
  echo "â®• Adding push URL to origin â†’ $url"
  git remote set-url --push --add origin "$url"
done

# 4) Wire up current branch safely
branch=$(git rev-parse --abbrev-ref HEAD)

# Fetch so that refs/remotes/github/$branch actually exists
if git remote get-url github &>/dev/null; then
  echo "ðŸ“¥ Fetching github"
  git fetch github
fi

if git rev-parse --verify --quiet refs/remotes/github/"$branch" &>/dev/null; then
  echo "ðŸ”„ Remote branch github/$branch exists, setting as upstream"
  git branch --set-upstream-to=github/"$branch" "$branch"
else
  echo "ðŸšš Pushing branch to GitHub and setting upstream"
  git push -u github "$branch"
fi

echo "ðŸ“¤ Setting push default to origin"
git config branch."$branch".pushRemote origin

echo "ðŸŽ‰ Setup complete!
 â€¢ git pull    â†’ github/$branch
 â€¢ git push    â†’ all remotes via origin
"
